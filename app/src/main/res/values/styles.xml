<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorControlNormal">@color/colorNormal</item>
        <item name="android:colorForeground">@color/colorForeground</item>
    </style>

    <style name="ButtonTextAppearance" parent="Widget.AppCompat.Light.ActionButton">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/button_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ToolBarStyle" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="WeatherItemStyle">
        <item name="android:background">@drawable/weather_info_item_background</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="TableRowEven">
        <item name="android:background">@drawable/table_cell_even_bg</item>
    </style>

    <style name="TableRowOdd">
        <item name="android:background">@drawable/table_cell_odd_bg</item>
    </style>

    <style name="TableCellLabel">
        <item name="android:textColor">@color/colorBackground</item>
    </style>

    <style name="TableCellValue">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="FooterStyle">
        <item name="android:background">@drawable/footer_bg</item>
    </style>


</resources>
